{% extends '@SonataAdmin/CRUD/base_list_field.html.twig' %}

{% block field %}
    {% set currency_field = field_description.options.currency_field | default('currency') %}
    {% set currency = attribute(object, currency_field) %}
    {{ value | number_format(currency.decimalDigits) }}
    {{ attribute(object, currency_field) }}
{% endblock %}